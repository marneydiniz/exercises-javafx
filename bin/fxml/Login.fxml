<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<GridPane 
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="fxml.LoginControler"
	styleClass="login"
	hgap="15"
	vgap="15">
	
	<padding>
		<Insets left="40" right="40" top="40" bottom="40" />
	</padding>
	
	<Label
	text="Wellcome"
	styleClass="login-title"
	GridPane.columnIndex="0"
	GridPane.rowIndex="0"
	GridPane.columnSpan="2"
	GridPane.halignment="CENTER">
	
	<GridPane.margin>
		<Insets top="20" bottom="20" />
	</GridPane.margin>
	
	</Label>
	
	<Label
	text="Email:"
	styleClass="login-form-label"
	GridPane.columnIndex="0"
	GridPane.rowIndex="1">
	</Label>
	<TextField
	fx:id="emailField"
	GridPane.columnIndex="1"
	GridPane.rowIndex="1">
	</TextField>
	
	<Label
	text="Password:"
	styleClass="login-form-label"
	GridPane.columnIndex="0"
	GridPane.rowIndex="2">
	</Label>
	<PasswordField
	fx:id="passwordField"
	GridPane.columnIndex="1"
	GridPane.rowIndex="2">
	</PasswordField>
	
	<Button text="Enter"
	styleClass="login-form-button"
	GridPane.columnIndex="0"
	GridPane.rowIndex="3"
	onAction="#login"
	GridPane.columnSpan="2"
	GridPane.halignment="CENTER">
	
	<GridPane.margin>
		<Insets top="20" bottom="20" />
	</GridPane.margin>
	
	</Button>
	
</GridPane>

